# inside.vyos (On-prem) â€” Protected Inside (Spoke)
set system host-name 'onp-inside'

set interfaces ethernet eth0 description 'VYOS-OOB'
set interfaces ethernet eth0 address '10.255.255.24/24'

set interfaces ethernet eth1 description 'ONP-CORE'
set interfaces ethernet eth1 address '202.0.0.3/24'

set interfaces ethernet eth2 description 'ONP-DOMAIN'
set interfaces ethernet eth2 address '202.1.0.1/24'

set interfaces ethernet eth3 description 'ONP-DOMSVC'
set interfaces ethernet eth3 address '202.1.1.1/24'

set interfaces ethernet eth4 description 'ONP-AVD'
set interfaces ethernet eth4 address '202.1.2.1/24'

# Default route toward hub core.vyos
set protocols static route 0.0.0.0/0 next-hop '202.0.0.1'

set service ssh port '22'
set service ssh dynamic-protection
set service ssh dynamic-protection allow-from '10.255.255.0/24'
