# developer.vyos (On-prem) â€” Protected Developer (Spoke)
set system host-name 'onp-developer'

set interfaces ethernet eth0 description 'VYOS-OOB'
set interfaces ethernet eth0 address '10.255.255.25/24'

set interfaces ethernet eth1 description 'ONP-CORE'
set interfaces ethernet eth1 address '202.0.0.4/24'

set interfaces ethernet eth2 description 'ONP-DEV'
set interfaces ethernet eth2 address '202.2.0.1/24'

set interfaces ethernet eth3 description 'ONP-DEVSVC'
set interfaces ethernet eth3 address '202.2.1.1/24'

# Default route toward hub core.vyos
set protocols static route 0.0.0.0/0 next-hop '202.0.0.1'

set service ssh port '22'
set service ssh dynamic-protection
set service ssh dynamic-protection allow-from '10.255.255.0/24'
